# Production Environment Variables for Latexy
# Copy this file to .env.prod and fill in the actual values

# Application Environment
FASTAPI_ENV=production
NODE_ENV=production
DEBUG=false

# Database Configuration (Use managed database service in production)
DATABASE_URL=postgresql://username:password@your-db-host:5432/latexy_prod
POSTGRES_DB=latexy_prod
POSTGRES_USER=latexy_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration (Use managed Redis service in production)
REDIS_URL=redis://your-redis-host:6379/0
REDIS_CACHE_URL=redis://your-redis-host:6379/1
REDIS_PASSWORD=your_redis_password
REDIS_MAX_CONNECTIONS=50

# Celery Configuration
CELERY_BROKER_URL=redis://your-redis-host:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-host:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Production Infrastructure
DEPLOY_ENV=production
MONITORING_WEBHOOK_URL=your_monitoring_webhook_url
DEPLOYMENT_WEBHOOK_URL=your_deployment_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Load Balancer Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_CLIENT_MAX_BODY_SIZE=50M

# Rate Limiting
API_RATE_LIMIT=10r/s
COMPILE_RATE_LIMIT=2r/s

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Job Management Configuration
JOB_RESULT_TTL=86400
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=60

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_HEARTBEAT_INTERVAL=30

# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
GEMINI_API_KEY=your_gemini_api_key

# API Key Encryption (Generate a secure 32-byte key)
API_KEY_ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded

# Authentication Configuration
BETTER_AUTH_SECRET=your_better_auth_secret_key
BETTER_AUTH_URL=https://your-domain.com

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Payment Gateway (Razorpay Production)
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Frontend Configuration
NEXT_PUBLIC_API_BASE_URL=https://your-domain.com/api
NEXT_TELEMETRY_DISABLED=1

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/latexy.crt
SSL_KEY_PATH=/etc/ssl/latexy.key

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password

# Security Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Logging Configuration
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# CDN Configuration (Optional)
CDN_URL=https://cdn.your-domain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_email@your-domain.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@your-domain.com
